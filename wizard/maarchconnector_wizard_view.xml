<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="wizard_form_view">
            <field name="name">wizard.form</field>
            <field name="model">maarch.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group col="6">
                            <field name="filesubject"/>
                        </group>
                        <group col="6">
                            <button name="search_docs" type="object"
                                    string="rechercher" class="oe_highlight"/>
                        </group>
                    </group>
                    <html>
                        <!-- do not show the "add" link in the tree view -->
                        <style>
                            .openerp .oe_form_field_many2many_list_row_add { display:none }
                        </style>
                    </html>
                    <label for="document_ids"/>
                    <!-- the one2many widget makes the view looks like in a one2many case (columns are sortable...) -->
                    <field name="document_ids" widget="one2many">
                        <tree create="false" delete="false" editable="false">
                            <field name="maarch_id"/>
                            <field name="subject"/>
                            <field name="doc_date"/>
                        </tree>
                    </field>

                    <footer>
                        <button name="add_maarchdoc_in_odoo" type="object"
                                string="ajouter" class="oe_highlight"/>
                        ou
                        <button special="cancel" string="annuler"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>
