<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="wizard_form_view">
            <field name="name">wizard.form</field>
            <field name="model">maarch.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group col="12">
                            <field name="filesubject"/>
                        </group>
                        <group col="6">
                            <field name="min_date"/>
                        </group>
                        <group col="6">
                            <button name="search_docs" type="object"
                                    string="rechercher" class="oe_highlight"/>
                        </group>
                    </group>
                    <label for="document_ids"/>
                    <!-- the one2many widget makes the view looks like in a one2many case (columns are sortable...) -->
                    <!-- "no_create" hides the "add" link in the tree view -->
                    <field name="document_ids" widget="one2many" options="{'no_create': True}">
                        <tree create="false" delete="false" editable="false"
                              colors="black:to_add==True;grey:to_add==False">
                            <field name="to_add"/>
                            <field name="maarch_id" invisible="1"/>
                            <field name="subject"/>
                            <field name="doc_date"/>
                        </tree>
                    </field>

                    <footer>
                        <button name="add_maarchdoc_into_odoo" type="object"
                                string="ajouter" class="oe_highlight"/>
                        ou
                        <button special="cancel" string="annuler"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>
